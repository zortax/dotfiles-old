[module/updates]
type = custom/script
exec = ~/.scripts/count-updates.sh
format = <label>
tail = true
interval = 90
exec-if = "ping -q -w 2 -c 1 google.de > /dev/null"
label = %{F#41535b} / upd%{F#cccccc} %output%

[module/pacman]
